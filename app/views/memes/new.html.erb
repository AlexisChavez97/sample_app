<h1>Upload a new meme with it's background story</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  <%= form_for(@meme) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="field">
      <%= f.text_area :caption, placeholder: "Here goes the caption" %>
    </div>
    <span class='picture'>
      <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
    </span>

    <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

