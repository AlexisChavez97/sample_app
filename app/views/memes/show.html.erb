<h1>Take a better look</h1>

<div class="posts-wrapper row">
    <div class="post">
      <div class="image center-block">
        <%= image_tag @meme.picture, class:'img-responsive' %>
      </div>
      <p class="caption">
      <h2>About</h2>
        <%= @meme.caption %>
        <% if current_user.admin? %>
        | <%= link_to "Delete", @meme, method: :delete,
                                  data: { confirm: "You sure?" } %>
        <% end %>
        <br>
        <span class="user">Meme added by: <%=  link_to @meme.user.name,
                                               @meme.user %></span>
      </p>
    </div>
</div>
