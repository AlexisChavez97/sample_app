<h1>Edit your meme</h1>

<div class="posts-wrapper row">
  <div class="post show">
    <div class="image center-block">
      <%= image_tag @meme.picture, class:'img-responsive' %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  <%= form_for(@meme) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="field">
      <h2>Name</h2>
      <%= f.text_area :name, placeholder: "Here goes the name" %>
    </div>
    <div class="field">
      <h2>About the meme</h2>
      <%= f.text_area :caption, placeholder: "Here goes the caption" %>
    </div>
    <%= f.select :category, Meme.categories.keys, {}, class: 'meme-categories-select' %>
    <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
